{
    "name": "railt/parser",
    "type": "library",
    "description": "Syntactic LL(k) parser-analyzer implementation",
    "license": "MIT",
    "keywords": ["parser", "llk", "ll1", "lr", "slr", "language", "php", "ast"],
    "homepage": "http://railt.org",
    "support": {
        "issues": "https://github.com/railt/railt/issues",
        "source": "https://github.com/railt/parser"
    },
    "authors": [
        {
            "name": "Kirill Nesmeyanov",
            "email": "nesk@xakep.ru"
        },
        {
            "name" : "Ivan Enderlin",
            "email": "ivan.enderlin@hoa-project.net"
        },
        {
            "name"    : "Hoa community",
            "homepage": "https://hoa-project.net/"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "ext-spl": "*",
        "ext-pcre": "*",
        "ext-mbstring": "*",
        "railt/io": "1.2.*",
        "railt/lexer": "dev-master@dev"
    },
    "autoload": {
        "psr-4": {
            "Railt\\Parser\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5"
    },
    "autoload-dev": {
        "psr-4": {
            "Railt\\Tests\\Parser\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    }
}
